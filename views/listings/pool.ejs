<% layout("/layouts/boilerplate") -%>

<div id="filters">
    <div class="filter">
        <a href="/listings/trending" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
    </div>
    <div class="filter" >
        <a href="/listings/rooms" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/iconiccitys" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/mountains" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/castles" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/amazingpools" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/camping" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/farms" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/arctic" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/domes" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/boats" style="text-decoration: none; color: rgb(53, 57, 57);">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </a>
    </div>
    <div class="form-check form-switch " style="display: flex;flex-direction: row;">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" >
        <label class="form-check-label " for="flexSwitchCheckDefault" style="flex-wrap: nowrap;" >Taxes</label>
    </div>
    
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
    <% for(let pool of pools){%>
        <a href="/listings/<%= pool._id%>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%=pool.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%=pool.title %><br></b>
                        &#8377;<%=pool.price.toLocaleString("en-IN") %>/night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <%}%>
</div>

<script>
    let taxSwitch =document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo =document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline" ;
            }else{
                info.style.display="none";
            }
        }
    });
</script>
   

